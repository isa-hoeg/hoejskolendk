<script type="module">
  // Kun én sektion åben ad gangen
  const items = document.querySelectorAll('.accordion-item');
  items.forEach(item => {
    item.addEventListener('toggle', () => {
      if (!item.open) return;
      items.forEach(other => {
        if (other !== item) other.open = false;
      });
      item.scrollIntoView({ block: 'nearest', behavior: 'smooth' });
    });
  });
</script>